<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Minipro1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0336ff</item>
        <item name="colorPrimaryVariant">#0035c9</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Enable for transition. -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Settings for enter and exit. -->
        <item name="android:windowEnterAnimation">@transition/trans_anim</item>
        <item name="android:windowExitTransition">@transition/trans_anim</item>

    </style>
</resources>