<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goback2"
            android:layout_width="142dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_baseline_arrow_circle_left_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/forget_lock"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:ems="10"
            android:minHeight="59dp"
            app:srcCompat="@drawable/ic_baseline_lock_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_forgetpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center"
            android:shadowColor="#75353535"
            android:shadowDx="10"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:text="Forget \nPassword"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center"
            android:text="You can change your password for security \nreasons or reset it if you forget it."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ed_pass"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/ubunturegular"
            android:hint="Username"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_nextforget"
            android:layout_width="157dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center"
            android:text="Next"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@color/white" />
    </LinearLayout>
</RelativeLayout>