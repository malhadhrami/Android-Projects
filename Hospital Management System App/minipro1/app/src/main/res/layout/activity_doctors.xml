<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".Doctors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/gohome"
            android:layout_width="83dp"
            android:layout_height="63dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="52dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_arrow_circle_left_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/doc_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:layout_marginRight="110dp"
            android:layout_weight="1"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center"
            android:shadowColor="#75322F2F"
            android:shadowDx="3"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="Doctors"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="1"
        app:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="322dp"
            android:layout_height="129dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="329dp"
                android:layout_height="229dp"
                android:foregroundGravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="340dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/amir" />

                <TextView
                    android:id="@+id/doc_name1"
                    android:layout_width="460dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubunturegular"
                    android:gravity="center"
                    android:text="Amir Khan"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="322dp"
            android:layout_height="129dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/anil" />

                <TextView
                    android:id="@+id/doc_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubunturegular"
                    android:gravity="center|center_horizontal"
                    android:text="Anil Rajeesh"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="322dp"
            android:layout_height="129dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sina" />

                <TextView
                    android:id="@+id/doc_name3"
                    android:layout_width="93dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubunturegular"
                    android:gravity="center"
                    android:text="Sina Minhas"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>


</RelativeLayout>