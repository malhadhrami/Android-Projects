<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity2"
    android:orientation="vertical"
    tools:context=".register">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/activity2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Register"
                android:textColor="#8C8C8C"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edtxt_username"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/baseline_manage_accounts_24"
                android:drawablePadding="5dp"
                android:hint="Username"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/edtxt_email"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/edtxt_password"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="10dp" />


            <EditText
                android:id="@+id/Phone_number"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="5dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingStart="10dp" />


            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="I accept terms and conditions"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/button"
                android:text="@string/Join"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="You can find us here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="32dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="60dp"
                        android:src="@drawable/twitterlogo" />

                    <ImageView
                        android:id="@+id/url_instagram"
                        android:layout_width="32dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="60dp"
                        android:src="@drawable/instalogo" />

                    <ImageView
                        android:id="@+id/snap"
                        android:layout_width="32dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/snapchatagain" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/copyrights"
                    android:textColor="#FFFFFF" />

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>